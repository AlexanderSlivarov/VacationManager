﻿@using VacationManager
@using VacationManager.Models
@using VacationManager.Models.Team
@using VacationManager.Models.Project
@using VacationManager.Models.Leave
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<LeaveViewModel>
@{
    ViewData["Title"] = "Leaves";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
@if (!Model.Any())
{
    <h3 class="text-center">No leaves yet!</h3>
}
else
{
    <div class="container text-center">
        <div class="row">
            @foreach (var leave in Model)
            {
                <div class="card d-flex justify-content-center" style="width: 20rem;">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><span class="fw-bold">Type: </span>@leave.Type</li>
                        <li class="list-group-item">
                            <span class="fw-bold">Actions: </span>
                            <a asp-controller="Leave" asp-action="Details" asp-route-id="@leave.Id" class="btn btn-success mb-2">View</a>
                            <span></span>
                            <a asp-controller="Leave" asp-action="Edit" asp-route-id="@leave.Id" class="btn btn-primary mb-2">Edit</a>
                            <span></span>
                            <a asp-controller="Leave" asp-action="Delete" asp-route-id="@leave.Id" class="btn btn-danger mb-2">Delete</a>
                        </li>
                    </ul>
                </div>
            }
        </div>
    </div>
}

