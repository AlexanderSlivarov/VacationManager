﻿@using VacationManager
@using VacationManager.Models
@using VacationManager.Models.Team
@using VacationManager.Models.Project
@using VacationManager.Models.User
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Users";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<div class="container text-center">
    <div class="row">
        @foreach (var user in Model)
        {
            <div class="card d-flex justify-content-center" style="width: 20rem;">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><span class="fw-bold">UserName: </span>@user.UserName</li>
                    <li class="list-group-item"><span class="fw-bold">Role: </span>@user.Role</li>
                    <li class="list-group-item">
                        <span class="fw-bold">Actions: </span>
                        <a asp-controller="User" asp-action="Details" asp-route-id="@user.Id" class="btn btn-success mb-2">View</a>
                        <span></span>
                        <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary mb-2">Edit</a>
                        <span></span>
                        <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger mb-2">Delete</a>
                    </li>
                </ul>
            </div>
        }
    </div>
</div>


